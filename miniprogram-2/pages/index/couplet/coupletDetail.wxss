/* pages/index/couplet/coupletDetail.wxss */
.couplets_type{
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.upcouplets{
  display: flex;
  flex-direction: column;
  border-style: solid;
  border-radius: 1px;
  border-width: 1px;
  border-color:#b2b5b6;
  margin: 10px auto;
  width: 98%;
  font-size:12px;
  font-weight: 500;
}

.type{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 3px;
  margin-bottom: 3px;
  margin-left: 6px;
}
.information_test{
font-size: 12px;
color: #000000;
margin-left: 4px;
font-weight: 700;
}
.information_test1{
  font-size: 12px;
  color: #8b8686;
  font-weight: 700;
}
.information{
  display: flex;
  flex-direction: row;
  width: 25%;
}
.up{
  margin-top: 10px;
  margin-left: 6px;
  margin-right: 6px;
  margin-bottom: 10px;
  font-size: 20px;
  font-weight: 400;
}
.line{
  height: 1px;
  width: 100%;
  background-color: #000000;
}
.line-heng{
  width:95%;
  height: 1rpx;
  background-color: rgb(211, 214, 219);
  margin-top: 25rpx;
  margin-left: 20rpx;
}
.line-heng-fixed{
  width:95%;
  height: 1rpx;
  background-color: rgb(211, 214, 219);
  margin-top: 25rpx;
  margin-left: 20rpx;
  position: fixed;
  bottom: 3rem;
}
.coupletTitle{
  font-weight: 600;
  font-size: 42rpx;
  margin:3px auto;
  margin-bottom: 10px;
  color: red;
  text-align: center;
  width: 80%;
  
  overflow: hidden;
  white-space: nowrap;
}
.avatar-img{
  width:40px;
  height: 40px;
  border-radius: 50%;
}
.introduction{
  font-size:32rpx;
}

.coupletAuthor{
  text-align: right;
  margin-right: 10px;
}

.flex-box{
  display: flex;
}

.fan-box{
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.fan-inner-box{
  width: 260rpx;
}

.flex-center{
  justify-content: center;
}

.fan-title{
  color: #909399;
  font-size: 1.2rem;
}

.comment{
  height: 55vh;
  width: 100%;
}

.commentInput{
  bottom: 0vh;
  margin-left: 0.6rem;
  margin-right: 0.6rem;
  width: 100%;
  position: fixed;
}

.card-demo image {
  border-radius: 50%;
}

.user-comment{
  margin-right: 1.2rem;
  margin-left: 1.2rem;
  font-size: 16px;
  width: 100%;
}

.commentIndex{
  margin-left: 9rem;
  color: #80848f;
}

.comment-content{
  margin-top: 0.6rem;
  margin-bottom: 0.6rem;
  margin-left: 2.7rem;
  font-size: 18px;
  word-break:break-all;
  width: 600rpx;
}

.comment-operation{
  margin-left: 2.7rem;
}

.moreWork{
  font-size: 34rpx;
  padding-top: 20rpx;
  text-align: center;
  color: #18abea;
}