/**分类栏**/
.classify{ 
  width: 100%;  
  height: 100%;  
  background-color: #fff;  
  color: #808080;  
}
.left-navbar{
  position:absolute;
  left:0;
  width:20%;
  height:100%;
  background-color:#eee;
  font-size:15px;
}
.top-navbar{
  position:fixed;
  display: flex;
  align-items: center;
  width: 80%;
  top: 0;
  left: 20%;
  height: 5%;
  background-color:#eee;
  font-size:15px;
  overflow: hidden;
  white-space: nowrap;
  z-index: 99;
}
.item-navbar{
  width: 80%;
  top: 5%;
  right: 0;
}
.top-navbar view{
  display: inline-block;
  width: 20%;
  text-align: center;
  padding: 3px;
  margin-right: 5px;
}
.left-navbar view{
  height:120rpx;
  line-height: 120rpx;
  text-align:center;
}
.active{
  background-color:#FFF;
  color:rgb(240, 33, 33);
  font-size:34rpx;
}
.activeitem{
  border-style: solid;
  border-color: rgb(240, 33, 33);
  border-width: 1px;
  border-radius: 12px;
  font-size: 16px;
  color:rgb(240, 33, 33);
  font-weight: 600;
  margin-top: 2px;
}
.flase_active{
  border-style: solid;
  border-color: #34b1e2;
  border-width: 1px;
  border-radius: 12px;
  font-size: 16px;
  color: #07b5e0;
  font-weight: 500;
  margin-top: 2px;
}
#right{
  position:absolute;
  right:0;
  width:80%;
  height:100%;
}
.img-banner{
  height:150rpx;
  width:100%;
}


