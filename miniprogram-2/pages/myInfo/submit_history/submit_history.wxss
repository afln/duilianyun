/* pages/myInfo/submit_history/submit_history.wxss */
.flex-box{
  display: flex;
}

.flex-center{
  justify-content: center;
}


page {
  background: #f8f8f8;
}

.header {
  /*padding: 0 25rpx;*/
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  width: 100%;
  background: #fff;
  position: relative;
  border-radius: 10px;
  margin-top: 10rpx;
}

.book {
  display: flex;
  justify-content: space-between;
  
}

.book-box {
  display: flex;
  width: 100%;
}

.logo {
  width: 160rpx;
  height: 200rpx;
  border-radius: 15%;
  background: rgb(126, 119, 119);
  will-change: transform;
  position: relative;
  margin-left:25rpx;
}


.logo image {
  width: 100%;
  height: 100%;
  border-radius: 15%;
  will-change: transform;
}

.book-info {
  padding-left: 32rpx;
}

.book-name {
  font-size: 36rpx;
  font-weight: bold;
  width: 300rpx;
  height: 40rpx;
  overflow: hidden;
  -webkit-line-clamp: 1;  
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  color: rgb(80, 80, 80);
}

.book-name image {
  margin-left: 16rpx;
  width: 84rpx;
  height: 31rpx;
}

.introduction {
  margin-top: 12rpx;
  font-size: 27rpx;
  color: rgb(80, 80, 80);
  width: 300rpx;
  height: 150rpx;
  overflow: hidden;
  -webkit-line-clamp: 1;  
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
}

.star{
  margin-left: 120rpx;
  align-items: center;
}
.contanier{
  width: 100%;
  height: 120rpx;
  background-color: #f5f3f3;
  display: flex;
  flex-direction: column;
  margin-bottom: 5px;
  padding-top: 4px;
  border-style: solid;
  border-radius: 10px;
  border-width: 1px;
  border-color: rgb(209, 207, 207);
}
.title{
  font-size: 16px;
  color: rgb(255, 0, 0);
  font-weight: 650;
  margin-left: 12px;
  margin-right: 4px;
  margin-top: 5px;
}
.itemContainer{
  display: flex;
  justify-content: space-between;
}
.NameItem{
  margin-top: 10px;
  margin-right: 10px;
}
.title1{
  display: inline;
  font-size: 14px;
  color: rgb(255, 0, 0);
  font-weight: 650;
  margin-left: 5px;
}
.NOShen{
  margin-left: 5px;
  display: inline;
  font-size: 14px;
  color:#8b8686;
  font-weight: 650;
}
.Name{
  font-size: 14px;
  color: #8b8686;
  font-weight: 700;
  margin-left: 12px;
  margin-right: 8px;
  margin-top: 10px;
}
.noneStar{
  width: 60rpx;
  margin-left: 120rpx;
}